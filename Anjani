#include <stdio.h>
#include <stdlib.h>


int main() {
	int n;
	printf("enter the number of input :- ");
	scanf("%d", &n);
	
	int i, num=0,sum=0;
	int count=0;
	
	for (i=0;i<n;i++){
		printf("enter value %d :",i+1);
		scanf("%d", &num);
		
		if (num%2!= 0){
			count++;
			
		}

	}	
	
	printf("the odd numbers are = %d", count);
	
	return 0;
}
